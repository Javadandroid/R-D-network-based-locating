# --- PostgreSQL ---
POSTGRES_DB=towercell
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# --- Django DB toggle ---
DJANGO_DB_BACKEND=postgres

# --- pgAdmin ---
PGADMIN_DEFAULT_EMAIL=admin
PGADMIN_DEFAULT_PASSWORD=1234
PGADMIN_PORT=5050

# --- Redis / Celery ---
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# --- Snapshot Locate (External API) ---
# Host allowlist for /api/snapshot/locate/ (SSRF protection)
SNAPSHOT_ALLOWED_HOSTS=188.121.103.145

# --- Import API key (optional) ---
# If set, frontend should send `X-API-KEY` for /api/towers/import-start/ and /api/towers/import/
IMPORT_API_KEY=change-me

# --- Combain (tower resolver) ---
COMBAIN_API_KEY="your api key here"

# --- Google Geolocation API (tower resolver) ---
GOOGLE_GEOLOCATION_API_KEY="your api key here"

# --- External neighbor lookup (paid) ---
ALLOW_EXTERNAL_NEIGHBOR_LOOKUP=false


# --- CORS / CSRF (Frontend running on LAN IP) ---
# Comma-separated.
CORS_ALLOWED_ORIGINS=http://172.20.66.67:3000
CSRF_TRUSTED_ORIGINS=http://172.20.66.67:3000
